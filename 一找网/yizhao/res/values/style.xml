<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="theme_fontcolor_red">
    	<item name="android:textColor">#CE4040</item>
    </style>
    
    <style name="theme_fontcolor_blake">
    	<item name="android:textColor">#000</item>
    </style>
    
    <style name="theme_fontcolor_CCC">
    	<item name="android:textColor">#CCC</item>
    </style>
    
    <style name="theme_fontcolor_white">
    	<item name="android:textColor">#FFF</item>
    </style>
    
    <style name="style_line">
		<item name="android:layout_height">1px</item>
		<item name="android:background">#b7b7b7</item>
	</style>
	
	<style name="style_tab_line">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">2px</item>
		<item name="android:background">#ff9c00</item>
	</style>
	
	<style name="cursdialog" parent="@android:style/Theme.Dialog">
         <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 
        <item name="android:background">@android:color/black</item>
         -->
        <item name="android:windowBackground">@null</item>
        <!-- 
        <item name="android:backgroundDimEnabled">false</item>
        -->
    </style>
    
    <style name="transparent">
       <item name="android:windowNoTitle">true</item>
       <item name="android:windowBackground">@color/transparent_background</item>
       <item name="android:windowIsTranslucent">true</item>
       <item name="android:windowAnimationStyle">@anim/anim_moveup_in</item>
    </style>
    
</resources>
