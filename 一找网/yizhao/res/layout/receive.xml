<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="3dp">
	<LinearLayout android:orientation="horizontal" android:background="@drawable/detail_lv_def" android:gravity="center_vertical" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:text="总共" style="@style/theme_fontcolor_blake" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<TextView android:id="@+id/receive_count" android:text="0条" style="@style/theme_fontcolor_red" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<TextView android:text="评论" style="@style/theme_fontcolor_blake" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	</LinearLayout>
    <ListView android:id="@+id/receive_listview" android:fadeScrollbars="true" android:scrollingCache="false" android:fadingEdge="none" android:divider="@drawable/list_driver" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
</LinearLayout>

    	