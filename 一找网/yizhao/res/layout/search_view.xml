<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/search_selec" android:padding="3dp" android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_width="fill_parent">
