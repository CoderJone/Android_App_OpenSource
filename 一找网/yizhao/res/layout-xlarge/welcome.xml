<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/welcome_bg"
    android:gravity="center">
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_weight="1">
    <!-- android:layout_height="155dp" android:layout_width="219dp" -->
    	<ImageView android:scaleType="fitXY" android:src="@drawable/welcome_logo" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
    	<TextView android:id="@+id/appstart_text" android:padding="5dip" android:textColor="#FFF" android:text="@string/appstart_initing" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    	<ProgressBar android:id="@+id/downloadBar" android:layout_width="200dp" android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal" android:max="100" android:visibility="gone"/>
	</LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="center" android:layout_weight="3">
    	<TextView android:padding="5dip" android:textColor="#3F3F3F" android:textAppearance="?android:attr/textAppearanceSmall" android:text="@string/wel_str" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>
